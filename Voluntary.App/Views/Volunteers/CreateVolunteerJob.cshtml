@model AddMoreInfoVolunteerViewModel
<aside class="right-side">
    <section class="content-header">
        <h1>
            @_loc.GetLocalizedHtmlString("Additional information").Value
        </h1>

    </section>
    <section class="content">
        <div class="span9">
            <ul class="nav nav-tabs" id="modTabCreate" style="margin-bottom:0px;margin-left:5px;border-bottom: none;">
                <li class="active"><a id="tabVolunteer" href="#tabCreateVolunteer">@_loc.GetLocalizedHtmlString("Additional information").Value</a></li>
            
                </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tabCreateVolunteer">
                    <form class="form-horizontal" method="post" action="@Url.Action("CreateVolunteerJob")">
                        <div id="Employee" class="reviewBlock" data-content="Form" style="padding-left: 30px; background-color: white;">
                            <input type="hidden" asp-for="Id"/>
                            <div class="row">
                                <div class="col-md-9" style="margin-top: 20px">
                                    <div class="form-group row">
                                        <label class="col-sm-3 control-label">@_loc.GetLocalizedHtmlString("RegistrationNumber").Value </label>
                                        <div class="controls col-sm-6">
                                            <input  asp-for="RegistrationNumber" type="text" class="form-control">
                                            <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-3 control-label">@_loc.GetLocalizedHtmlString("Job").Value </label>
                                        <div class="controls col-sm-6">
                                            <input  asp-for="Job" type="text" class="form-control">
                                            <span asp-validation-for="Job" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="text1" class="col-sm-3 control-label">@_loc.GetLocalizedHtmlString("Region").Value </label>
                                        <div class="controls col-sm-6">
                                            <input  asp-for="Region" type="text" class="form-control">
                                            <span asp-validation-for="Region" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-3 control-label">@_loc.GetLocalizedHtmlString("Sector").Value </label>
                                        <div class="controls col-sm-6">
                                            <input asp-for="Sector" type="text" class="form-control">
                                            <span asp-validation-for="Sector" class="text-danger"></span>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group row">
                                        <label class="col-sm-3 control-label">@_loc.GetLocalizedHtmlString("Neighborhood").Value </label>
                                        <div class="controls col-sm-6">
                                            <input asp-for="Neighborhood" type="text" class="form-control">
                                            <span asp-validation-for="Neighborhood" class="text-danger"></span>

                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-3 control-label">@_loc.GetLocalizedHtmlString("DistrictName").Value </label>
                                        <div class="controls col-sm-6">
                                            <input asp-for="DistrictName" type="text" class="form-control">
                                            <span asp-validation-for="DistrictName" class="text-danger"></span>

                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-3 control-label">@_loc.GetLocalizedHtmlString("AffectedCity").Value </label>
                                        <div class="controls col-sm-6">
                                            <input asp-for="AffectedCity" type="text" class="form-control">
                                            <span asp-validation-for="AffectedCity" class="text-danger"></span>

                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-3 control-label">@_loc.GetLocalizedHtmlString("Comment").Value </label>
                                        <div class="controls col-sm-6">
                                            <textarea asp-for="Comment" class="form-control"></textarea>
                                            <span asp-validation-for="Comment" class="text-danger"></span>

                                        </div>
                                    </div>
                                    
                                    <div class="control-group row">
                                        <div class="controls col-sm-9">
                                            <button type="submit" class="saveBtn btn btn-primary pull-right"><i class="fa fa-save"></i> @_loc.GetLocalizedHtmlString("Save").Value</button>
                                          
                                            <a href="@Url.Action("Index")" class="cancelBtn btn pull-right" style="margin-right: 5px;"><i class="fa fa-times-circle-o"></i> @_loc.GetLocalizedHtmlString("Cancel").Value</a>
                                        </div>
                                        <div class="controls col-sm-3">
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </form>


                </div>
            </div>


        </div>
    </section>
</aside>
